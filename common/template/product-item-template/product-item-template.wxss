
.product-item{
  width: 100%;
  height: 269rpx;
  position: relative;
  border-top: 1rpx solid #d9d9d9;
  padding: 30rpx 18rpx 0;
  box-sizing: border-box;
}
.img-out{
  position: absolute;
  width: 240rpx;
  height: 209rpx;
}
.img-out image{
  display: block;
  width: 100%;
  height: 100%;
}

.goods-msg{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding-left: 258rpx;
}
.goods-title{
  margin-bottom: 10rpx;
  font-size: 26rpx;
}
.goods-title .title-tag{
  display: inline-block;
  padding: 3rpx 10rpx;
  background: #28c263;
  border: 1rpx solid #01210d;
  border-radius: 31rpx;
  color: #fff;
}
.goods-title .title-text{
  color: #01210d;
  line-height: 39rpx;
}

.goods-date{
  height: 36rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}
.goods-date .icon-rili{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.goods-date .date-text{
  font-size: 24rpx;
  color: #646466;
}

.tag-wrap{
  height: 36rpx;
  display: flex;
  align-items: center;
}
.tag-wrap .run-tag{
    display: inline-block;
    padding: 2rpx 5rpx;
    border: 1rpx solid #28c263;
    border-radius: 7rpx;
    font-size: 22rpx;
    color: #727274;
    margin-right: 7rpx;
}

.price-msg{
  font-size: 24rpx;
  color: #646466;
  margin-top: 5rpx;
  text-align: right;
}
.price-msg .price{
  font-size: 34rpx;
  color: #ff1313;
  font-weight: bold;
}









