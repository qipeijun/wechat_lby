/* pages/custom-tailor/custom-tailor.wxss */


.custom{
  width: 100%;
  background: url("http://www.weiyujinfu.com/mobile/newlby/static/img/mdiy-new-bg.533568e.png") no-repeat top center;
  background-size: cover;
  padding-top: 208rpx;
  padding-bottom: 50rpx
}

.custom-con{
  width: 654rpx;
  margin: 0 auto;
  background-color: hsla(0,0%,100%,.85);
  border-radius: 6rpx;
  margin-bottom: 100rpx;
  padding-top: 67rpx;
  padding-bottom: 35rpx;
}

.change-group{
  width: 566rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  margin-bottom: 41rpx;
}
.change-group text{
  display: inline-block;
  width: 253rpx;
  height: 81rpx;
  background-color: #fff;
  color: #3e3e3e;
  font-size: 26rpx;
  text-align: center;
  line-height: 81rpx;
  border-radius: 8rpx;
  border: 1rpx solid #28c263;
  transition: all .25s cubic-bezier(0.075, 0.82, 0.165, 1);
}
.change-group text.active{
  background-color: #28c263;
  border: 1rpx solid #fff;
  color: #fff;
}


.form-group{
  width: 566rpx;
  height: 75rpx;
  box-sizing: border-box;
  border: 1rpx solid #dddddd;
  border-radius: 6rpx;
  margin: 0 auto;
  margin-bottom: 14rpx;
  background-color: #fff;
  padding: 7rpx 0;
}
.form-group.active{
  border: 1px solid #28c263;
}
.form-key{
  height: 100%;
  width: 174rpx;
  float: left;
  position: relative;
  border-right: 2rpx solid #ebebeb;
  display: flex;
  align-items: center;
}
.form-key .key{
  display: inline-block;
  width: 100%;
  font-size: 24rpx;
  color: #3e3e3e;
  padding: 0 14rpx 0 25rpx;
  box-sizing: border-box;
  font-weight: bold;
  text-align: left;
}

.form-key .asterisk{
  color: #28c263;
  position: absolute;
  width: 20rpx;
  left: -30rpx;
  line-height: 57rpx;
}

.form-val{
  height: 100%;
  width: 384rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  float: left;
  display: flex;
  align-items: center;
}
.form-val input{
  font-size: 24rpx;
  width: 100%;
}
.form-val .date{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.phone-code-wrap{
  width: 566rpx;
  margin: 0 auto;
  height: 75rpx;
  margin-bottom: 14rpx;
}
.phone-code-wrap .form-group{
  width: 422rpx;
  float: left;
  margin-bottom:0; 
}
.phone-code-wrap .form-group .form-val{
  width: 240rpx;
}
.phone-code-wrap .get-phone-code-btn{
  box-sizing: border-box;
  width: 137rpx;
  height: 75rpx;
  border: 1px solid #fff;
  font-size: 24rpx;
  color: #fff;
  background-color: #28c263;
  float: right;
  line-height: 75rpx;
  padding: 0;
  text-align: center;
}
.phone-code-wrap .get-phone-code-btn.active{
  background-color: #21994f;
}

.line{
  width: 566rpx;
  height: 0;
  border-top: 1px dashed #28c263;
  margin: 37rpx auto
}


.text-wrap{
  width: 566rpx;
  margin: 0 auto;
  min-height: 134rpx;
  background-color: #fff;
  border: 1rpx solid #dddddd;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding:10rpx 15rpx;
}
.text-wrap textarea{
  font-size: 24rpx;
  min-height: 134rpx;
  height: auto;
  width: 100%;
}

.point-out{
  width: 566rpx;
  margin: 0 auto;
  text-align: left;
  margin-bottom: 50rpx;
}
.point-out text{
  font-size: 22rpx;
  color: #3e3e3e;
  line-height: 1;
}

.btn-wrap{
  width: 566rpx;
  margin: 0 auto;
}

.btn-wrap button{
  height: 88rpx;
  width: 325rpx;
  margin: 0 auto;
  border: 1px solid #fff;
  border-radius: 6rpx;
  background-color: #28c263;
  font-size: 30rpx;
  color: #fff;
  line-height: 88rpx;
}
.btn-wrap button.active{
  background-color: #21994f;
}



