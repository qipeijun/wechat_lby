/* pages/custom-tailor/custom-tailor.wxss */


.custom{
  width: 100%;
  height: 800px;
  background: url("http://www.weiyujinfu.com/mobile/newlby/static/img/mdiy-new-bg.533568e.png") no-repeat top center;
  background-size: cover;
  padding-top: 208rpx;
}

.custom-con{
  width: 654rpx;
  height: 600px;
  margin: 0 auto;
  background-color: hsla(0,0%,100%,.85);
  border-radius: 6rpx;
  margin-bottom: 100rpx;
  padding-top: 67rpx;
}

.change-group{
  width: 566rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  margin-bottom: 41rpx;
}
.change-group text{
  display: inline-block;
  width: 253rpx;
  height: 81rpx;
  background-color: #fff;
  color: #3e3e3e;
  font-size: 26rpx;
  text-align: center;
  line-height: 81rpx;
  border-radius: 8rpx;
  border: 1rpx solid #28c263;
  transition: all .25s cubic-bezier(0.075, 0.82, 0.165, 1);
}
.change-group text.active{
  background-color: #28c263;
  border: 1rpx solid #fff;
  color: #fff;
}















