/* pages/user/user.wxss */

.user-info-wrap{
  width: 100%;
  height: 373rpx;
  background: url("http://www.weiyujinfu.com/mobile/newlby/static/img/bg@3x.3e087cf.png") no-repeat top center;
  background-size: cover;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-name,.user-account{
  color: #fff;
}
.user-avatar{
  width: 119rpx;
  height: 119rpx;
  border-radius: 50%;
  margin-top: 97rpx;
}
.user-name{
  font-size: 28rpx;
  margin: 12rpx auto;
  font-weight: bold;
}
.user-account{
  font-size: 24rpx;
}



.user-list{
  width: 100%;
  height: auto;
  background-color: #f5f5f5;
  padding-top: 22rpx;
  padding-bottom: 50rpx;
}

.user-item{
  box-sizing: border-box;
  width: 100%;
  height: auto;
  padding-left: 0;
  background-color: #fff;
}
.user-item .item{
  width: 100%;
  height: 84rpx;
  border-bottom: 1rpx solid #e7e7e7;
}
.user-item .item .item-text{
  font-size: 28rpx;
  color: #444;
  display: inline-block;
  vertical-align: middle;
  line-height: 84rpx;
}
.user-item .item .icon-left{
  width: 37rpx;
  height: 37rpx;

  margin-right: 28rpx;
  margin-left:32rpx; 
  display: inline-block;
  vertical-align: middle;
  line-height: 84rpx;
}
.user-item .item .icon-right{
  width: 12rpx;
  height: 23rpx;
  margin-right: 25rpx;
  margin-top: 28rpx;
  float: right;
}

.group-center{
  margin: 22rpx auto;
}

.user-item .item:last-child{
  border-bottom: none;
}






















