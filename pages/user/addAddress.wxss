/* pages/user/addAddress.wxss */

page {
  background-color: rgba(197, 197, 197, 0.7)
}

.addAddress_container {
  width: 100%;
  height: 100%;
}

.addAddress_container .addAddress_item {
  width: 100%;
  height: 88rpx;
  background-color: white;
  border-bottom-color:rgba(197, 197, 197, 0.7);
  border-bottom-style: solid;
  border-bottom-width: 1rpx; 
}

.addAddress_container .addAddress_item:first-child {
  margin-top: 40rpx;
}

.addAddress_container .addAddress_item .item_title {
  float: left;
  margin-left: 32rpx;
  font-size: 30rpx;
  line-height: 88rpx;
}

.addAddress_container .addAddress_item .item_detailTitle {
  float: right;
  margin-right: 32rpx;
  text-align: right;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.addAddress_container .addAddress_item item_detailTitle_placeholder {
  text-align: right;
}

.addAddress_container .addAddress_item .info-icon {
  float: right;
  height: 28rpx;
  width: 16rpx;
  margin-left: 0;
  margin-top: 30rpx;
  margin-right: 32rpx;
}