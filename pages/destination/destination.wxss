/* pages/destination/destination.wxss */

@import "/common/wxss/common.wxss";
@import "/common/template/destination-template/destination-template"

.navgationBar {
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center; 
}

.navgationBar .searchView {
  background-color: white;
  width: 80%;
  height: 60rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.navgationBar .searchView .search_dropdownMenu {
  float: left;
  width: 200rpx;
  height: 60rpx;
  background-color: #24ae51;
  border-radius: 0;
  line-height: 60rpx;
  font-size: 30rpx;
}

.navgationBar .searchView .search_icon {
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin: 15rpx 8px;
}

.navgationBar .searchView .search_input {
  height: 60rpx;
  text-overflow: ellipsis;
  background-color: white;
  font-size: 26rpx;
}

.contentView {
  position: fixed;
  top: 88rpx;
  right: 0;
  left: 0;
  bottom:98rpx;
}

.contentView .histroy {
  background-color: white;
  height: 98rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.contentView .histroy .histroy_text {
  font-size: 30rpx;
  text-align: center; 
  border-radius: 10rpx;
  flex: 1;
}

.contentView .histroy .histroy_scroll {
  flex: 1;
  width: 80%;
}

.contentView .histroy .histroy_scroll .histroy_content {
  white-space: nowrap;
}

.contentView .histroy .histroy_scroll .histroy_content .histroy_content_text {
  line-height: 98rpx;
  font-size: 26rpx;
  padding: 9rpx;
  border-radius: 10rpx;
  color: gray;
}

.contentView .destination {
  float: left;
  width: 30%;
  height: 100%;
}

.contentView .destination_detail {
  float: left;
  width: 70%;
  height: 100%;
}

.contentView .destination .destination_scroll {
  width: 100%;
  height: 100%;
  transition: height 5s ease-in-out;
}

/* button默认的样式 */
.contentView .destination .destination_scroll .destination_scroll_item {
  width: 100%;
  height: 100rpx;
  background-color: lightgreen;
  text-align: right;
  border-radius: 0;
}
